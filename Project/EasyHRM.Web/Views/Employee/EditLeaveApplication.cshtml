@model EasyHRM.Core.DataModel.LeaveApplicationModel

@{
    ViewData["Title"] = "Add Holiday";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Add Holiday</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Add Holiday </li>
        </ol>
    </div>


</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Employee" asp-action="EditLeaveApplication" method="post">
                    @*<input type="hidden" asp-for="Month" value="January" />
                        <input type="hidden" asp-for="Day" value="Sunday" />*@

                    <input type="hidden" asp-for="Status" value="Pending" />
                    <div class="form-group">
                        <label asp-for="Reason"></label>
                        <input type="text" asp-for="Reason" class="form-control" placeholder="Enter Reason">
                        <span asp-validation-for="Reason" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveTypeId"></label>
                        <select asp-for="LeaveTypeId" class="form-control m-input" asp-items="@(ViewBag.LeaveTypes)">
                            <option value="">Select Leave Type</option>
                        </select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveDate"></label>
                        <input type="date" asp-for="LeaveDate" class="form-control" placeholder="Enter Reason">
                        <span asp-validation-for="LeaveDate" class="text-danger" />
                    </div>

                    <button type="submit" id="btnSave" class="btn btn-sm btn-success waves-effect waves-light "><i class="fa fa-plus"></i> Add</button>
                    <a asp-action="index" id="btnCancel" class="btn btn-sm btn-danger waves-effect waves-light "><i class="fa fa-remove"></i> Cancel</a>

                </form>
            </div>
        </div>
    </div>
</div>

