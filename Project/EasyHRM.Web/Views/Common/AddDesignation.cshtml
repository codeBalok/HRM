@model EasyHRM.Core.DataModel.DesignationModel

@{
    ViewData["Title"] = "Add Designation";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Add Designation</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Add Designation </li>
        </ol>
    </div>
    
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10" ><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-controller="common" asp-action="AddDesignation" method="post">
                    <div class="form-group">
                        <label asp-for="DepertmentId"></label>
                        <select asp-for="DepertmentId" class="form-control m-input" asp-items="@(ViewBag.Depertments)">
                            <option value="">Select Department</option>
                        </select>
                        <span asp-validation-for="DepertmentId" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Designation Name</label>
                        <input type="text" asp-for="Name" class="form-control"  placeholder="Enter Designation Name">
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                    <button type="submit" id="btnSave" class="btn btn-sm btn-success waves-effect waves-light "><i class="fa fa-plus"></i> Add</button>
                    <a asp-action="DesignationList" id="btnCancel" class="btn btn-sm btn-danger waves-effect waves-light "><i class="fa fa-remove"></i> Cancel</a>

                </form>
            </div>
        </div>
    </div>

</div>

