@model IEnumerable<EasyHRM.Core.DataModel.DepartmentModel>
@{
    ViewData["Title"] = "DesignationList";
    int i = 1;
}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Designation List</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Designation List </li>
        </ol>
    </div>
    <div class="col-md-7 align-self-center text-right d-none d-md-block">
        <a asp-action="AddDesignation" class="btn btn-info"><i class="fa fa-plus-circle"></i> Create New</a>
    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @*<h4 class="card-title">Bordered Table</h4>
                    <h6 class="card-subtitle">Add<code>.table-bordered</code>for borders on all sides of the table and cells.</h6>*@
                <div class="">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Department </th>
                                <th>Designation</th>
                                <th class="text-nowrap">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td colspan="2">@item.Name</td>
                                    @*<td>
                                               @item.Name
                                        </td>

                                        <td class="text-nowrap">
                                           
                                        </td>*@
                                    <td></td>
                                </tr>
                                i++;
                                foreach (var dept in item.Designations)
                                {
                                    <tr>
                                        
                                        <td colspan="2"></td>
                                        <td >
                                            <span >
                                                @dept.Name
                                            </span> 
                                        </td>
                                        <td>
                                            <a data-toggle="tooltip" asp-controller="common" asp-action="EditDesignation" asp-route-designationId="@item.Id" data-original-title="Edit" class="btnEdit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                            <a data-toggle="tooltip" data-original-title="Delete" asp-controller="common" asp-action="DeleteDesignation" asp-route-id="@item.Id" onclick="return confirm('are you sure want to delete?')"> <i class="fa fa-close text-danger"></i> </a>
                                        </td>
                                    </tr>
                                   
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts {
    <script type="text/javascript">

    </script>
}