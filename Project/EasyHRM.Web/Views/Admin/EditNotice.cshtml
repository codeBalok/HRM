@model EasyHRM.Core.DataModel.NoticeModel

@{
    ViewData["Title"] = "Add Notice";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Add Notice</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Add Notice </li>
        </ol>
    </div>

    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Admin" asp-action="EditNotice" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Subject"></label>
                        <input type="text" asp-for="Subject" class="form-control" placeholder="Enter Subject">
                        <span asp-validation-for="Subject" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Message"></label>
                        <textarea asp-for="Message" class="form-control" placeholder="Enter Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger" />
                    </div>
                    <button type="submit" id="btnSave" class="btn btn-sm btn-success waves-effect waves-light "><i class="fa fa-plus"></i> Update </button>
                    <a asp-action="NoticeList" id="btnCancel" class="btn btn-sm btn-danger waves-effect waves-light "><i class="fa fa-remove"></i> Cancel</a>

                </form>
            </div>
        </div>
    </div>
</div>

