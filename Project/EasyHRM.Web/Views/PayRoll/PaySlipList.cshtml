@model IEnumerable<EasyHRM.Core.DataModel.PaySlipModel>
@{
    ViewData["Title"] = "PaySlip List";
    int i = 1;
}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">PaySlip List</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">PaySlip List </li>
        </ol>
    </div>
    <div class="col-md-7 align-self-center text-right d-none d-md-block">
        <a asp-action="CreatePaySlip" class="btn btn-info"><i class="fa fa-plus-circle"></i>New PaySlip</a>
    </div>
    
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @*<h4 class="card-title">Bordered Table</h4>
                    <h6 class="card-subtitle">Add<code>.table-bordered</code>for borders on all sides of the table and cells.</h6>*@
                <div class="">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Title </th>
                                <th>Department</th>
                                <th>Month</th>
                                <th>Payment Date</th>
                              
                                <th class="text-nowrap">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Title</td>
                                    <td>@item.DepartmentId</td>
                                    <td>
                                        @item.Month
                                    </td>
                                    <td>
                                        @item.PaymentDate.ToShortDateString()
                                    </td>
                                    <td class="text-nowrap">
                                        <a data-toggle="tooltip" asp-controller="PayRoll" asp-action="PaySlipDetails" asp-route-id="@item.Id" data-original-title="details" class="btnEdit"> <i class="fa fa-group text-inverse m-r-10"></i> </a>
                                        <a data-toggle="tooltip" asp-controller="PayRoll" asp-action="DeletePaySlip" asp-route-id="@item.Id" data-original-title="Delete" onclick="return confirm('are you sure want to delete?')"> <i class="fa fa-close text-danger"></i> </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts {
    <script type="text/javascript">

    </script>
}
